<?xml version="1.0" encoding="utf-8"?>
<com.github.captain_miao.optroundcardview.OptRoundCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_device_binary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/card_spacing"
    android:layout_marginRight="@dimen/card_spacing"
    app:cardElevation="@dimen/card_elevation"
    app:optRoundCardCornerRadius="@dimen/card_radius"
    app:optRoundCardBackgroundColor="@color/secondaryColor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/card_padding_lg">

        <TextView
            android:id="@+id/device_binary_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="50dp"
            android:layout_toStartOf="@+id/device_binary_value"
            android:textColor="@color/primaryColor"
            android:textSize="@dimen/card_title_size"
            android:singleLine="true"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/device_binary_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/device_binary_name"
            android:layout_marginEnd="50dp"
            android:layout_toStartOf="@+id/device_binary_value"
            android:layout_below="@+id/device_binary_name"
            android:textSize="12sp"
            android:singleLine="true"
            android:ellipsize="end" />

        <Switch
            android:id="@+id/device_binary_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

</com.github.captain_miao.optroundcardview.OptRoundCardView>