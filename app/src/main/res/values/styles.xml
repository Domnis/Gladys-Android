<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Gladys" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="md_corner_radius">@dimen/card_radius</item>
        <item name="md_color_content">@color/secondaryTextColor</item>
        <item name="md_color_title">@color/secondaryTextColor</item>
        <item name="android:editTextColor">@color/secondaryTextColor</item>
    </style>

    <style name="Gladys_Splash" parent="Gladys">
        <item name="colorPrimaryDark">@color/secondaryColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="Gladys_Settings" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryColor</item>
    </style>

    <style name="Widget.Gladys.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.Gladys.TextInputLayout.HintText</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="TextAppearance.Gladys.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/colorPrimary</item>
    </style>

</resources>
